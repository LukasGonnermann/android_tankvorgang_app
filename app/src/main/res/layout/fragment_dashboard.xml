<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.dashboard.DashboardFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical">

            <!-- Anzeigename -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="45dp"
                android:layout_marginBottom="35dp">

                <TextView
                    android:id="@+id/TextViewName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:text="Mein Auto"
                    style="@style/Theme.Tankauswertung.DarkTextView"
                    android:textSize="40sp" />

            </LinearLayout>

            <!-- Aktueller Tankstand anzeige-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/TextViewAktuellerTankstand"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="40%"
                    style="@style/Theme.Tankauswertung.DarkTextView"
                    android:textSize="20sp" />


            </LinearLayout>

            <!-- Aktueller Tankstand -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="25dp">

                <TextView
                    android:id="@+id/labelAktuellerTankstandTitel"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:text="@string/tankstand_l"
                    android:layout_margin="10dp"
                    android:textSize="28sp" />

            </LinearLayout>

            <!-- Tabelle -->

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TableRow>

                    <!-- Kilometerstand anzeige -->

                    <TextView
                        android:id="@+id/TextViewKilometerstand"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="25sp"
                        android:text="100 000"
                        style="@style/Theme.Tankauswertung.DarkTextView"
                        android:textStyle="bold"/>

                    <!-- Verbrauch anzeige-->

                    <TextView
                        android:id="@+id/TextViewVerbrauch"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        style="@style/Theme.Tankauswertung.DarkTextView"
                        android:text="5,8"/>

                </TableRow>

                <TableRow
                    android:layout_marginBottom="15dp">

                    <!-- Kilometerstand -->

                    <TextView
                        android:id="@+id/labelKilometerstand"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="18sp"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:text="@string/kilometerstand_km"/>

                    <!-- Verbrauch -->

                    <TextView
                        android:id="@+id/labelVerbrauch"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="18sp"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:text="@string/verbrauch_durchschnittlich"/>

                </TableRow>

                <View style="@style/Divider.Horizontal"/>

                <TableRow
                    android:layout_marginTop="20dp">

                    <!-- Reichweite anzeige -->

                    <TextView
                        android:id="@+id/TextViewReichweite"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="25sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        style="@style/Theme.Tankauswertung.DarkTextView"
                        android:text="100 000"/>

                    <!-- CO2-Ausstoß anzeigen -->

                    <TextView
                        android:id="@+id/TextViewCo2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="25sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        style="@style/Theme.Tankauswertung.DarkTextView"
                        android:text="5,8"/>

                </TableRow>

                <TableRow>

                    <!-- Reichweite -->

                    <TextView
                        android:id="@+id/labelReichweite"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:layout_margin="10dp"
                        android:text="@string/Reichweite" />

                    <!-- CO2-Ausstoß-->

                    <TextView
                        android:id="@+id/labelCo2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:layout_margin="10dp"
                        android:text="@string/co2_ausstoss_kg"/>

                </TableRow>


            </TableLayout>

                <ProgressBar
                    android:id="@+id/simpleProgressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:min="0"
                    android:layout_marginTop="100dp"/>


        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>

