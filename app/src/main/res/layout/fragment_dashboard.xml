<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.dashboard.DashboardFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/TextViewName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="24sp"
                android:layout_marginTop="15dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <!-- CheckBox Elektrofahrzeug -->

                <CheckBox
                    android:id="@+id/ViewElektro"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:enabled="false"
                    android:text="@string/elektrofahrzeug"/>

            </LinearLayout>

            <!-- Verbrauch innerorts -->

            <TextView
                android:id="@+id/labelVerbrauchInnerortsTitel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:text="@string/verbrauch_innerorts_l_100km"/>


            <TextView
                android:id="@+id/TextViewVerbrauchInnerortsStand"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:textSize="18sp" />

            <!-- Verbrauch außerorts -->

            <TextView
                android:id="@+id/labelVerbrauchAusserortsTitel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:text="@string/verbrauch_au_erorts_l_100km" />

            <TextView
                android:id="@+id/TextViewVerbrauchAusserortsStand"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:textSize="18sp" />

            <!-- Verbrauch kombiniert -->

            <TextView
                android:id="@+id/labelVerbrauchKombiniertTitel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:text="@string/verbrauch_kombiniert_l_100km"/>

            <TextView
                android:id="@+id/TextViewVerbrauchKombiniertStand"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:textSize="18sp" />

            <!-- CO2-Ausstoß -->
            <TextView
                android:id="@+id/labelCo2Ausstoss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:text="@string/co2_ausstoss_g_km"/>

            <TextView
                android:id="@+id/TextViewCo2"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:textSize="18sp" />

            <!-- Kilometerstand -->

            <TextView
                android:id="@+id/labelKilometerstand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:text="@string/kilometerstand_km"/>

            <TextView
                android:id="@+id/TextViewKilometerstand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:textSize="18sp" />

            <!-- Tankvolumen -->

            <TextView
                android:id="@+id/labelTankvolumen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:text="@string/tankvolumen_l" />

            <TextView
                android:id="@+id/TextViewTankvolumen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:textSize="18sp" />

            <!-- Aktueller Tankstand -->

                    <TextView
                        android:id="@+id/labelAktuellerTankstandTitel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/tankstand_l"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/TextViewAktuellerTankstandStand"
                        android:layout_width="325dp"
                        android:layout_height="42dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginBottom="15dp"
                        android:textSize="18dp" />

        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>

