<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical">

            <!-- Getankte Menge -->

            <TextView
                android:id="@+id/labelGetankteMengeTitel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/getankte_menge" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/labelTankvorgangMenge"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="@string/zero_number" />

                <SeekBar
                    android:id="@+id/seekBarTankvorgangMenge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:max="100"
                    android:min="0" /><!-- TODO ? -->
            </LinearLayout>

            <!-- Preis -->

            <TextView
                android:id="@+id/labelPreisTitel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/preis" />


            <EditText
                android:id="@+id/editTextPreis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:inputType="numberDecimal"
                android:text="@string/zero_number" />


            <!-- Bild des Tankvorgangs -->
            <TextView
                android:id="@+id/labelTankvorgangBild"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/bild_des_tankbelegs" />

            <ImageView
                android:id="@+id/imageViewTankvorgangThumbnail"
                android:layout_width="200dp"
                android:layout_height="150dp"
                tools:srcCompat="@tools:sample/backgrounds/scenic"
                android:visibility="gone"/> <!-- TODO IMG File source -->


            <Button
                android:id="@+id/buttonTankvorgangBildAufnehmen"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/tankvorgang_bild_aufnehmen" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
