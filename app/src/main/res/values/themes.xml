<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.Tankauswertung" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blau_1</item>
        <item name="colorPrimaryVariant">@color/blau_2</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blau_1</item>
        <item name="colorSecondaryVariant">@color/blau_2</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Customize your theme here. -->
        <item name="cardBackgroundColor">@color/white_darker</item>

        <item name="android:statusBarColor" tools:targetApi="l">@color/white_darker</item>
        <item name="android:windowLightStatusBar" tools:targetApi="l">@color/white_darker</item>

    </style>

    <style name="Theme.Tankauswertung.DarkTextView" parent="Theme.Tankauswertung">
        <item name="android:textColor">@color/black_light</item>
    </style>

    <style name="Theme.Tankauswertung.Toolbar" parent="Theme.Tankauswertung">
        <item name="android:background">@color/white_dark</item>
        <item name="android:popupTheme">@style/Theme.NavDrawer.PopupOverlay</item>
    </style>

    <!-- custom Button styles -->

    <style name="Theme.Tankauswertung.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/white_darker</item>
        <item name="android:textColor">@color/black_light</item>
    </style>

    <style name="Theme.Tankauswertung.ButtonSelected" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">?attr/colorPrimary</item>
    </style>

    <!-- custom ImageButton styles -->

    <style name="Theme.Tankauswertung.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:backgroundTint">@color/white_darker</item>
        <item name="android:tint">@color/blackblue_lighter</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="Theme.Tankauswertung.ImageButtonSelected" parent="Widget.AppCompat.ImageButton">
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:tint">@color/white</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="Theme.NavDrawer.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.NavDrawer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/white</item>
    </style>

</resources>
